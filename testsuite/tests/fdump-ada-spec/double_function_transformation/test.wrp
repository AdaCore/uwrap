import ada.wrappers;
import ada.transformations;

wrap wrap_ada_specs ();

match DefiningName ("(.*)")
wrap w_DefiningName (normalize_ada_name ("\1"));

match DefiningName ("(.*)_h")
wrap w_DefiningName (normalize_ada_name ("\1") & "_Wrapped");

match d: NumberDecl(child (n: DefiningName ("(.*)Error")))
wrap error_code_into_exception ("Test_Exceptions", "My_Registry", "\1"); 

match SubpDecl ()
   and child (f_subp_kind ("function")) 
   and child (TypeExpr ("int")) 
   and not child (DefiningName ("lastError"))
wrap return_into_exception ("Test_Exceptions", "My_Registry"); 

match ParamSpec("access *")
wrap access_into_return (); 
