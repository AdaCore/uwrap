template main_1 do
    var a1 : text;
    var a2 : text;
    var a3 : text;
end;

template main_2 do
    var a1 : text;
    var a2 : text;
    var a3 : text;
end;


match Entity (f_name (x"A"))
weave main_1 (a1 => self.tmp ("local"), a2 => self.tmp ("local"));

match Entity (f_name (x"A"))
weave main_1 (a3 => self.tmp ("local"));

match Entity (f_name (x"B"))
weave main_2 (a1 => self.tmp ("global"), a2 => self.tmp ("local"), a3 => self.tmp());

match main_1 ()
weave standard.out ("a1 = \e<a1>, a2 = \e<a2>, a3 = \e<a3>\n");

match main_2 ()
weave standard.out ("a1 = \e<a1>, a2 = \e<a2>, a3 = \e<a3>\n");